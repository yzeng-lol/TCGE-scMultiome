name: iSHARC_R_pkgs
channels:
  - conda-forge                         ## conda config --set channel_priority strict: priority ranked from top to the bottom
  - bioconda
dependencies:
  - r-base=4.3.0
  - r-argparse=2.2.5                ## R arguments parser, data manipulation and plotting
  - r-devtools=2.4.5
  - r-rmarkdown=2.29
  - r-knitr=1.49
  - r-tidyverse=2.0.0
  - r-tidyr=1.3.1
  - r-dplyr=1.1.4
  - r-ggplot2=3.5.1
  - r-ggpubr=0.6.0
  - r-gplots=3.2.0
  - r-tidygraph=1.3.0
  - r-plotly=4.10.4                      ## for interactive sankey plot
  - r-heatmaply=1.5.0
  - r-rlang=1.1.4
  - r-future=1.34.0                 ## for paralleling
  - r-doparallel=1.0.17
  - r-qlcmatrix=0.9.8                         ## for LinkPeaks
  - r-matrix=1.6.1.1                      ## matching seuratobject version
  - r-seuratobject=4.1.3                      ## ensure < 5.0.0 for Pando
  - r-seurat=4.3.0.1                       ## single cell processing
  - r-signac=1.11.0                      ## analysis scATAC-seq data
  - r-harmony=1.2.3                      ## integration of single cell datasets
  - r-hdf5r=1.3.8
  - r-paralleldist=0.2.6                ## for copykat
  - r-mixtools=2.0.0                    ## for copykat
  - r-mcmcpack=1.7.1                   ## for copykat
  - r-glmnetutils=1.1.9                        ## for pnado
  - r-bayestestr=0.15.0                        ## for pnado
  - r-ggpointdensity=0.1.0                       ## for pnado
  - r-pals=1.9                                 ## for pnado
  - r-grr=0.9.5                                ## for pnado
  - bioconductor-limma=3.58.1
  - bioconductor-glmgampoi=1.14.0      ## for faster SCT v2 normalization
  - bioconductor-singler=2.4.0           ## auto annotation by reference
  - bioconductor-celldex=1.12.0          ## reference database
  - bioconductor-iranges=2.36.0
  #- bioconductor-tfbstools=1.40.0              ## will cause Matirx conflicts, installed from lo
  - bioconductor-jaspar2020=0.99.10
  - bioconductor-motifmatchr=1.24.0           ## for pnado
  - bioconductor-sparsematrixstats=1.14.0      ## for pnado
  - bioconductor-clusterprofiler=4.10.0
  - bioconductor-org.hs.eg.db=3.18.0
  - bioconductor-ensdb.hsapiens.v86=2.99.0             ## annotations
  - bioconductor-bsgenome.hsapiens.ucsc.hg38=1.4.5
